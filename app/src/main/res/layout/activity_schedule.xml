<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/schedule"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ScheduleActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
       <RelativeLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">
                <View
                    android:id="@+id/background"
                    android:layout_width="0dp"
                    android:layout_height="161dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="-24dp"
                    android:layout_marginRight="-1dp"
                    android:background="#102755" />

                <TextView
                    android:id="@+id/november_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="34dp"
                    android:gravity="center_horizontal|top"
                    android:text="November 2021"
                    android:textColor="#FFFFFF"
                    android:textSize="32sp"
                    android:fontFamily="@font/poppins_semi_bold"/>
       </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <CalendarView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

                <View
                    android:id="@+id/rectangle_2"
                    android:layout_width="195dp"
                    android:layout_height="34dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/rounded3"
                    android:backgroundTint="#102755" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="48dp"
                    android:gravity="center_horizontal|bottom"
                    android:text="Schedule"
                    android:layout_marginTop="5dp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="16sp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/view_schedule"
                android:onClick="redirectFinalTest"
                tools:ignore="OnClick,SpeakableTextPresentCheck,UsingOnClickInXml" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="40dp"
                    android:text="03"
                    android:textSize="24sp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="#102755"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="150dp"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/poppins_regular"
                android:text="Final Test"
                android:textColor="#102755"
                android:textSize="14sp"
                tools:ignore="TouchTargetSizeCheck" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="170dp"
                    android:layout_marginTop="55dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="13:00 pm"
                    android:textColor="#102755"
                    android:textSize="14dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/view_schedule"
                android:onClick="redirectFinalTest"
                tools:ignore="OnClick,SpeakableTextPresentCheck,UsingOnClickInXml" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/poppins_regular"
                android:text="04"
                android:textColor="#102755"
                android:textSize="24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="150dp"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/poppins_regular"
                android:text="Practice UX design"
                android:textColor="#102755"
                android:textSize="14sp"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="170dp"
                android:layout_marginTop="55dp"
                android:fontFamily="@font/poppins_regular"
                android:text="13:00 pm"
                android:textColor="#102755"
                android:textSize="14dp" />
        </RelativeLayout>




    </LinearLayout>


</ScrollView>
